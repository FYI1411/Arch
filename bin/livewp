#!/bin/bash
wp_dir=~/wallpaper/
num=1
# when num > the files count => shuf return the max num
# else only return 1 file
cmd='mpvpaper -o'
opt='--gapless-audio=no --loop-playlist --no-audio'
last_wp=$(ps ax ww | grep -v grep | \
grep mpvpaper | awk -F '/' '{print $NF}')
# space in case file doesn't exist
if [[ ! -f "$wp_dir$last_wp" ]]; then
	last_wp=" "
fi

main() {
	pkill -9 -f $cmd  > /dev/null 2>&1
	if [[ ($# -eq 1  &&  $1 =~ ^[0-9]+$) || $# -eq 0 ]]; then
		if [[ $1 =~ ^[0-9]+$ ]]; then
			num=$1
		fi
		$cmd "$opt" '*' $(find ${wp_dir} -type f \
		-wholename "*.mp4" ! -wholename "*$last_wp" | shuf -n ${num}) \
		> /dev/null 2>&1
	else
		$cmd "$opt" '*' $@ > /dev/null 2>&1
	fi
}

main "$@"
