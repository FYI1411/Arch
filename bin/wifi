#! /bin/bash

if [[ $# == 0 ]]; then
	nmcli device wifi list
elif [[ $# > 0 ]]; then
	if [[ $1 == "-t" ]]; then
		if [[ ! $(rfkill | grep -w 'blocked') ]]; then
			rfkill block all
		else
			rfkill unblock all
		fi
	else
		nmcli --ask device wifi connect "$1"
	fi
fi

echo "My SSID: $(nmcli | grep connected | cut -d " " -f 4)"
